@model chatbot.Controllers.UserViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="row justify-content-center align-content-center" style="min-height:80vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4">
            <h2 class="card-title text-center mb-4">Giriş Yap</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group mb-2">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 mt-2">
                            <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                        </div>
                    </div>
                    <p class="mt-3">
                        @Html.ActionLink("Kayıt Ol", "Register")
                    </p>

                }
            </section>
        </div>
    </div>
</div>

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
    @if(ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.ErrorMessage))");
            };
        </script>
    }

}
