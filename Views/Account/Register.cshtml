@model chatbot.Controllers.UserViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="row justify-content-center align-content-center" style="min-height:80vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4">
            <h2 class="card-title text-center mb-4">Kayıt Ol</h2>


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Kulanıcı Adı" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Password)
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre" })
                </div>

                <button type="submit" class="btn btn-primary mt-2">Kayıt Ol</button>
            }
        </div>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}
